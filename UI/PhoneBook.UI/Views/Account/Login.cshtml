@model PhoneBook.Common.Models.UserLogin
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Login</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="fa fa-user-o"></span>
                    </div>
                    <h3 class="text-center mb-4">Have an account?</h3>
                    <form asp-action="Login" class="login-form">
                        <div class="form-group">
                            <input asp-for="LoginProp" class="form-control rounded-left" placeholder="Login">
                        </div>
                        <div class="form-group d-flex">
                            <input asp-for="Password" class="form-control rounded-left" placeholder="Password">
                        </div>                    
                        <div class="text-center col-xs-12">
                            <button type="submit" class="btn btn-primary">Get Started</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

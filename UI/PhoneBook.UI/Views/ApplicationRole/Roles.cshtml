@model IEnumerable<ApplicationRoleListViewModel> 


  
<div class="top-buffer"></div> 
<div class="panel panel-primary"> 
    <div class="panel-heading panel-head">Application Roles</div> 
    <div class="panel-body"> 
        <div class="btn-group"> 
            <a asp-action="AddEditApplicationRole" class="btn btn-primary"> 
                <i class="glyphicon glyphicon-plus"></i>  Add Role 
            </a> 
        </div> 
        <div class="top-buffer"></div> 
        <table class="table table-bordered table-striped table-condensed"> 
            <thead> 
                <tr> 
                    <th>Name</th> 
                    <th>Description</th> 
                    <th>Users</th>   
                </tr> 
            </thead> 
            <tbody> 
                @foreach (var item in Model) 
                { 
                    <tr> 
                        <td>@item.RoleName</td> 
                        <td>@item.Description</td>                 
                        <td>                             
                            <a asp-action="AddEditApplicationRole" asp-route-id="@item.Id" class="btn btn-outline-secondary"> 
                                <i class="fa fa-pencil"></i>  Edit 
                            </a>
                            <a asp-action="DeleteApplicationRole" asp-route-id="@item.Id" class="btn btn-outline-secondary"> 
                                <i class="fa fa-trash"></i>  Delete 
                            </a>
                        </td> 
                    </tr> 
                } 
            </tbody> 
        </table> 
    </div> 
</div> 
   
